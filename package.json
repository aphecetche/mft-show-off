{
  "name": "mft-show-off",
  "version": "0.1.0",
  "description": "Le MFT : un détecteur de précision pour la physique du plasma de quarks et de gluons",
  "main": "index.js",
  "scripts": {
      "clean": "rm -f themes/mft/static/css/*.min.css",
      "clean:public": "rm -rf public",
      "css:watch": "postcss themes/mft/static/css/main.css --config postcss.config.js --output themes/mft/static/css/main.min.css --watch",
      "css:build": "postcss themes/mft/static/css/main.css --config postcss.config.js --output themes/mft/static/css/main.min.css",
      "start": "npm run clean:public && parallelshell 'npm run css:watch' 'hugo serve --noHTTPCache --ignoreCache'",
      "build": "npm run css:build && printenv && hugo version && hugo --baseURL $URL"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aphecetche/mft-show-off.git"
  },
  "author": "Laurent Aphecetche",
  "license": "GPL-3.0+",
  "bugs": {
    "url": "https://github.com/aphecetche/mft-show-off/issues"
  },
  "homepage": "https://github.com/aphecetche/mft-show-off#readme",
  "devDependencies": {
    "cssnano": "^3.10.0",
    "parallelshell": "^3.0.2",
    "postcss-cli": "^4.1.1",
    "postcss-cssnext": "^3.1.0",
    "postcss-easy-import": "^3.0.0",
    "postcss-font-magician": "^2.1.0",
    "stylelint": "^8.4.0",
    "stylelint-config-standard": "^17.0.0"
  }
}
